{
  "name": "john_research",
  "image": "john_research",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers-extra/features/apt-get-packages:1": {
      "packages": "pkg-config libssl-dev"
    },
    "ghcr.io/duduribeiro/devcontainer-features/neovim:1": {
      "version": "nightly"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers-extra/features/ripgrep:1": {},
    "ghcr.io/devcontainers-extra/features/fd:1": {},
    "ghcr.io/devcontainers-extra/features/npm-package:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/rio/features/chezmoi:1": {},
    "ghcr.io/GeorgOfenbeck/features/lazygit-linuxbinary:1": {},
    "ghcr.io/devcontainers/features/rust:1": {}
  },
  "mounts": [
    "source=${env:HOME}/.gitconfig,target=/root/.gitconfig,type=bind",
    "source=${env:HOME}/.git-credentials,target=/root/.git-credentials,type=bind"
  ],
  "postCreateCommand": [
    "bash",
    "-c",
    "chmod +x .devcontainer/setup.sh && bash .devcontainer/setup.sh"
  ]
}
